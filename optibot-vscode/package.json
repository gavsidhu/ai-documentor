{
  "name": "ai-documentor",
  "displayName": "ai-documentor",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "ai-documentor.document",
    "ai-documentor.refactor"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "ai-documentor.document",
        "key": "ctrl+shift+/",
        "when": "editorTextFocus"
      },
      {
        "command": "ai-documentor.refactor",
        "key": "ctrl+shift+;",
        "when": "editorTextFocus"
      }
    ],
    "commands": [
      {
        "command": "ai-documentor.document",
        "title": "Optibot Document"
      },
      {
        "command": "ai-documentor.refactor",
        "title": "Optibot Refactor"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ai-documentor.document",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "ai-documentor.refactor",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/request": "^2.48.8",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@octokit/rest": "^19.0.7",
    "axios": "^1.3.3",
    "firebase": "^9.17.2",
    "firebase-admin": "^11.5.0",
    "openai": "^3.2.1",
    "request": "^2.88.2",
    "request-cookies": "^1.1.0"
  }
}
